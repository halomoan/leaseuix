<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog id="conditionDialog"
		contentWidth="500px"
		contentHeight="720px"
		title="Condition Form"
		>
			<NavContainer
			id="navCon">
			<Page
				id="page1"
				class="sapUiResponsivePadding--header"
				 showHeader="false"
				>
					<VBox class="sapUiSmallMargin">
		<f:Form id="conditionForm1"
			editable="true">
			<f:title>
				<core:Title text="{/formheader/title} {/formdata/frequnit}" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Purpose">
							<f:fields>
								<ComboBox value="{/formdata/condpurpose}" selectedKey="{/formdata/condpurposeid}" items="{
											path: 'condformvalues>/condpurposes'
									}"
									>
											<core:Item key="{condformvalues>id}" text="{condformvalues>text}" />
									<layoutData>
										<l:GridData span="XL1 L2 M2 S7" />
									</layoutData>
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Frequency">
							<f:fields>
								<Input value="{/formdata/freq}" >
									<layoutData>
										<l:GridData span="XL1 L2 M2 S2" />
									</layoutData>
									</Input>
									<ComboBox selectedKey="{/formdata/frequnit}" items="{
											path: 'condformvalues>/frequnits'
									}">
											<core:Item key="{condformvalues>id}" text="{condformvalues>text}" />
									<layoutData>
										<l:GridData span="XL1 L2 M2 S5" />
									</layoutData>
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="ZIP Code/City">
							<f:fields>
								<Input value="{form>/type}">
									<layoutData>
										<l:GridData span="XL1 L2 M2 S4" />
									</layoutData>
								</Input>
								<Input value="{City}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Country">
							<f:fields>
								<Select id="country" selectedKey="{Country}">
									<items>
										<core:Item text="England" key="England"/>
										<core:Item text="Germany" key="Germany"/>
										<core:Item text="USA" key="USA"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>	
			</Page>
			<Page
				id="page2"
				class="sapUiResponsivePadding--header"
				showNavButton="true"
				navButtonPress="onNavBack"
				>
				<content>
				
				</content>
			</Page>
		</NavContainer>
	<beginButton>
	<Button text="Ok" press=".closeDialog"/>
	</beginButton>
	</Dialog>
</core:FragmentDefinition>