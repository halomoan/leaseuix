<mvc:View
	controllerName="refx.leaseuix.components.gridcondition.gridcondition"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	displayBlock="true"
	height="100%">
	<ScrollContainer height="100%" width="100%" vertical="true">
		<HBox renderType="Bare">
			<Button text="Add" press=".addCard"></Button>
			<Button text="Find ID" press=".findID"></Button>
			<f:GridContainer
				id="grid1"
				class="sapUiSmallMargin"
				width="100%"
				snapToRow="true"
				items="{ path: '/' }">
				<f:layout>
					<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
				</f:layoutXS>

				<f:Card >
					<f:layoutData>
						<f:GridContainerItemLayoutData minRows="{rows}" columns="{columns}" />
					</f:layoutData>
					<f:header>
						<card:Header title="{title}" subtitle="{i18n>Condition} : {id}" iconSrc="sap-icon://capital-projects"/>
					</f:header>
					<f:content>
						
					<core:Fragment id="fr1" fragmentName="refx.leaseuix.components.gridcondition.listcondition" type="XML" />
				
					</f:content>
				</f:Card>
			</f:GridContainer>
		</HBox>
	</ScrollContainer>
</mvc:View>