<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog id="stgWizardDialog" contentWidth="500px" contentHeight="600px" title="Staggered Wizard" icon="sap-icon://horizontal-waterfall-chart">
		<NavContainer id="navStgWzd">
			<Page id="stgForm0" class="sapUiResponsivePadding--header" showHeader="false" showNavButton="false">
				<content>
					<f:SimpleForm id="stgwzd_form0" editable="false" layout="ResponsiveGridLayout" title="{condformvalues>/condition/title}" labelSpanXL="3"
						labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
						columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
						<f:content>
						<Label text="No of Staggered"></Label>
						<Input value="{ path : 'condformvalues>/noofstaggered' , type : 'sap.ui.model.type.Integer' }" liveChange="validNoStaggered"></Input>
						<Text text="Max. Staggered allowed is {condformvalues>/maxstaggered}" class="customCSS red"></Text>
						<FormattedText htmlText="&lt;div class='customCSS red'&gt; Max. Staggered allowed is {condformvalues>/maxstaggered} &lt;div&gt;"/>
						</f:content>
					</f:SimpleForm>
					
					<OverflowToolbar class="sapUiSmallMargin customCSS" style="Clear">
							<ToolbarSpacer/>
							<Button text="Next &gt;&gt;" press="onStgWzdNext" type="Accept">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
								<customData>
									<core:CustomData key="target" value="stgForm1"/>
								</customData>
							</Button>
						</OverflowToolbar>
				</content>
			</Page>
			<Page id="stgForm1" class="sapUiResponsivePadding--header" showHeader="false" showNavButton="false">
				<content>
					<VBox fitContainer="true">
					<f:SimpleForm id="stgwzd_form1" editable="false" layout="ResponsiveGridLayout" title="{condformvalues>/condition/title}" labelSpanXL="3"
						labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
						columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
						<f:content>
							<HBox justifyContent="SpaceBetween">
								<VBox>
									<Label text="From"/>
									<DatePicker id="stgwzd_fromDate1" required="true"
										value="{path: 'condformvalues>/condition/cond/0/fromDate', type : 'sap.ui.model.type.Date',formatOptions:{ source : { pattern: 'yyyyMMdd' }, pattern: 'MMM dd, yyyy' }}"
										fieldGroupIds="fgCondDates" change="fromDateChanged">
										<layoutData>
											<l:GridData span="XL1 L2 M2 S5"/>
										</layoutData>
									</DatePicker>
								</VBox>
								<VBox>
									<Label text="To"/>
									<DatePicker id="stgwzd_toDate1" required="true"
										value="{path: 'condformvalues>/condition/cond/0/toDate', type : 'sap.ui.model.type.Date',formatOptions:{ source : { pattern: 'yyyyMMdd' }, pattern: 'MMM dd, yyyy' }}"
										fieldGroupIds="fgCondDates" change="toDateChanged">
										<layoutData>
											<l:GridData span="XL1 L2 M2 S5"/>
										</layoutData>
									</DatePicker>
								</VBox>
							</HBox>
							<HBox justifyContent="SpaceBetween">
								<VBox>
									<Label text="Sales Rule"/>
									<ComboBox value="{condformvalues>/condition/cond/0/salesrule}" selectedKey="{condformvalues>/condition/cond/0/salesruleid}"
										items="{ path: 'condformvalues>/salesrules' }">
										<core:Item key="{condformvalues>id}" text="{condformvalues>text}"/>
										<layoutData>
											<l:GridData span="XL1 L2 M2 S6"/>
										</layoutData>
									</ComboBox>
								</VBox>
								<VBox>
									<Label text="Purpose"/>
									<ComboBox value="{condformvalues>/condition/cond/0/condpurpose}" selectedKey="{condformvalues>/condition/cond/0/condpurposeid}"
										items="{ path: 'condformvalues>/condpurposes' }">
										<core:Item key="{condformvalues>id}" text="{condformvalues>text}"/>
										<layoutData>
											<l:GridData span="XL1 L2 M2 S6"/>
										</layoutData>
									</ComboBox>
								</VBox>
							</HBox>
							<HBox justifyContent="SpaceBetween">
								<VBox>
									<Label text="Rate"/>
									<Input id="stgwzd_amount1" required="true" description="{condformvalues>/currency}"
										value="{ parts: [{path: 'condformvalues>/condition/cond/0/amount'}, {path: 'condformvalues>/currency'}] , type: 'sap.ui.model.type.Currency',formatOptions: {showMeasure: false } }"></Input>
									<layoutData>
										<l:GridData span="XL1 L2 M2 S2"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label text="Frequency"/>
									<HBox>
										<Input value="{condformvalues>/condition/cond/0/freq}" width="3rem" maxLength="2"></Input>
										<ComboBox selectedKey="{condformvalues>/condition/cond/0/frequnit}" items="{ path: 'condformvalues>/frequnits' }" width="10.5rem">
											<core:Item key="{condformvalues>id}" text="{condformvalues>text}"/>
										</ComboBox>
									</HBox>
								</VBox>
							</HBox>
							<Label text="Formula"></Label>
							<ComboBox value="{condformvalues>/condition/cond/0/formula}" selectedKey="{condformvalues>/condition/cond/0/formulaid}"
								items="{ path: 'condformvalues>/formulas' }">
								<core:Item key="{condformvalues>id}" text="{condformvalues>text}"/>
							</ComboBox>
						</f:content>
					</f:SimpleForm>
						<OverflowToolbar class="sapUiSmallMargin customCSS" style="Clear">
							<Label text="Step: 2 / {=${condformvalues>/stgWizard}.length}" class="fontSize1_5 green" design="Bold"></Label>
							<ToolbarSpacer/>
							<Button text="&lt;&lt; Prev" press="onStgWzdNext" type="Reject">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
								<customData>
									<core:CustomData key="target" value="stgForm0"/>
								</customData>
							</Button>
							<Button text="Next &gt;&gt;" press="onStgWzdNext" type="Accept">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
								<customData>
									<core:CustomData key="target" value="stgForm2"/>
								</customData>
							</Button>
						</OverflowToolbar>
					</VBox>	
				</content>
			</Page>
		</NavContainer>
		<beginButton>
			<Button text="OK" press="closeStgWizard" visible="{/stgwzd/showOK}"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="cancelStgWizard"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>