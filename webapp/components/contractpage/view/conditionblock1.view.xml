<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="refx.leaseuix.components.contractpage.controller.conditionblock1">
	<Table
		id="tableCondition1"
		items="{ path: 'ConditionSet', 
		sorter: [ { path: 'ConditionType', descending: false, group: false}, { path: 'validfrom', descending: true, group: false}],
		filters: [ {path: 'OneTimeCondition', operator: 'EQ', value1: false}, {path: 'InfoCondition', operator: 'EQ', value1: false}],and: false }">
		<headerToolbar>
			<OverflowToolbar>
				<content>
		
					<ToolbarSpacer />
					<Label text="{i18n>Show} :"/>
					<ComboBox 
						selectedKey="All"
						placeholder="Period"
						change="onPeriodChange">
						<items>
							<core:Item text="Current"
								key="Current"/>
							<core:Item  text="Future"
								key="Future"/>
							<core:Item  text="Past"
								key="Past"/>
							<core:Item  text="All"
								key="All"/>	
						</items>
					</ComboBox>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column mergeDuplicates="true">
				<header>
					<Text text="Condition Type"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="From Date"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="To Date"/>
				</header>
			</Column>
			<!--<Column>-->
			<!--	<header>-->
			<!--		<Text text="Purpose"/>-->
			<!--	</header>-->
			<!--</Column>-->
			<Column hAlign="End">
				<header>
					<Text text="Unit Price"/>
				</header>
			</Column>
				<Column hAlign="End">
				<header>
					<Text text="Amount/Mth"/>
				</header>
			</Column>
			
			<Column hAlign="End">
				<header>
					<Text text="Tax/Mth"/>
				</header>
			</Column>
		</columns>
		<ColumnListItem>
			<ObjectIdentifier title="{ConditionTypeText}" text="{ConditionType}" />
			<Text text="{ path: 'validfrom', type: 'sap.ui.model.type.Date'}"/>
			<Text text="{ path: 'validto', type: 'sap.ui.model.type.Date'}"/>
			<!--<Text text="{ConditionPurposeText}"/>-->
			<ObjectNumber
					number="{
						parts:[{path:'UnitPrice'},{path:'Curr'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}"
					unit="{Curr}" />
			<ObjectNumber
					number="{
						parts:[{path:'ConditionAmount'},{path:'Curr'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}"
					unit="{Curr}" />
			<ObjectNumber
					number="{
						parts:[{path:'TaxAmount'},{path:'Curr'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}"
					unit="{Curr}" />		
		</ColumnListItem>
	</Table>
</mvc:View>