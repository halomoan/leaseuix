<mvc:View
	controllerName="refx.leaseuix.components.listselunit.listselunit"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	
	<HBox class="customCSS">

	<VBox>
		
		<FlexBox alignItems="End" direction="Column" width="7rem" class="sapUiSmallMargin" >
		<Label text="{ path: '/TotalSize', formatter: '.formatter.NumberFormat'}" class="sapMNCLargeFontSize green"></Label>
		<Label text="{/SizeUnit}, Total Size"></Label>
		</FlexBox>
		<FlexBox alignItems="End" direction="Column" width="7rem" class="sapUiSmallMargin" >
		<Label text="{/TotalUnits}" class="sapMNCLargeFontSize"></Label>
		<Label text="Total Units"></Label>
		</FlexBox>
		<!--<TileContent footer="Total Size" unit="SF" class="sapUiSmallMarginRight">-->
		<!--	<NumericContent scale="" value="{ path: '/TotalSize', formatter: '.formatter.NumberFormat'}"-->
		<!--		valueColor="Good" indicator="" />-->
		<!--</TileContent>-->

		<!--<TileContent footer="Total Unit" unit="" class="sapUiSmallMarginRight">-->
		<!--	<NumericContent scale="" value="{/TotalUnits}"-->
		<!--		 indicator="" />-->
		<!--</TileContent>-->
	
	</VBox>
		<List id="selectedunit" items="{/SelectedUnits}" width="400px" mode="Delete" delete="onDelete">
		<items>
		<CustomListItem>
			<HBox>
				<core:Icon size="2rem" src="sap-icon://building" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Link text="{Name}" target="{UnitPicUrl}" press="handlePress"/>
					<Label text="{= ${Available} ? 'Available' : 'Occupied' }"/>
				</VBox>
			</HBox>
		</CustomListItem>
		</items>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{i18n>RentalUnit}" level="H2" />
				<ToolbarSpacer />
				
				<Button
					icon="sap-icon://add"
					press="onValueHelpRequested" />
				
			</OverflowToolbar>
		</headerToolbar>
	</List>
	</HBox>
</mvc:View>