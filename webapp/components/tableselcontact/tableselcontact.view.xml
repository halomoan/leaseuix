<mvc:View height="100%" controllerName="refx.leaseuix.components.tableselcontact.tableselcontact"
		  xmlns:layout="sap.ui.layout"
		  xmlns="sap.ui.table"
		  xmlns:mvc="sap.ui.core.mvc"
		  xmlns:u="sap.ui.unified"
		  xmlns:m="sap.m"
		  xmlns:core="sap.ui.core">

	<layout:Grid defaultSpan="L12 M12 S12" class="customCSS">
		<layout:content>
		<Table  
				id="Table1"
				rows="{/SelectedCustomers}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar>
						<core:Icon
							src="sap-icon://contacts"
							class="iconSize2"
							color="#A6ACAF" >
						</core:Icon>
						<m:Title id="title" text="{i18n>OtherContact}" titleStyle="H3"/>
						<m:ToolbarSpacer/>
						<m:Button icon="sap-icon://delete" press=".onDelete"/>
						<m:Button icon="sap-icon://edit" press=".onValueHelpRequested"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column width="7rem" >
						<m:Label text="Customer Id" />
						<template>
							<m:Text text="{CustomerId}" wrapping="false" />
						</template>
					</Column>
					<Column >
						<m:Label text="{i18n>Name}" />
						<template>
							<m:Text text="{Name}"/>
						</template>
					</Column>
					<Column >
						<m:Label text="{i18n>Address}" />
						<template>
							<m:Text text="{Address}"/>
						</template>
					</Column>
					<Column >
						<m:Label text="{i18n>Email}" />
						<template>
							<m:Text text="{Email}"/>
						</template>
					</Column>
				
				</columns>
			</Table>
		</layout:content>
	</layout:Grid>
</mvc:View>