<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:card="sap.f.cards"  xmlns:core="sap.ui.core">
	<f:Card class="">
		<f:layoutData>
			<f:GridContainerItemLayoutData minRows="5" columns="4"/>
		</f:layoutData>
		<f:header>
			<Toolbar class="sapUiSmallMargin">
				<core:Icon src="sap-icon://appointment-2" class="iconSize2_5" color="green"></core:Icon>
				<VBox>
					<Label text="{i18n>ReportingRule}" design="Bold"></Label>
					<Label text="{i18n>Frequency}"></Label>
				</VBox>
				<ToolbarSpacer/>
				<Link text="Delete" press="onDelete"/>
				<Label text="|" width="5px"></Label>
				<Link text="Add Item" press="onItemAdd"/>
				<Button type="Transparent" tooltip="Toggle Sort By Date" icon="sap-icon://sort" press=".onDateSort"/>
			</Toolbar>
			<!--<card:Header title="Reporting Rule" subtitle="Reporting Frequency" iconSrc="sap-icon://appointment-2"/>-->
		</f:header>
		<f:content>
			<VBox class="sapUiSmallMargin" width="100%">
				<VBox>
					<Label text="Frequency Start" labelFor="freqStart"></Label>
					<DatePicker width="100%" placeholder="Choose Date ..." id="freqStart"/>
				</VBox>
				<VBox>
					<Label text="Frequency" labelFor="freqNo"></Label>
					<HBox width="100%">
						<Input id="freqNo" width="100px" maxLength="2"></Input>
						<ComboBox id="freqPeriod" width="100%" placeholder="Frequency" items="{ path: 'salesrulevalues>/frequencies', sorter: { path: 'id' } }">
							<core:Item key="{salesrulevalues>id}" text="{salesrulevalues>text}"/>
						</ComboBox>
					</HBox>
				</VBox>
			</VBox>
		</f:content>
	</f:Card>
</core:FragmentDefinition>