<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:core="sap.ui.core">
	<f:Card class="">
		<f:layoutData>
			<f:GridContainerItemLayoutData minRows="{/0/rows}" columns="{/0/columns}"/>
		</f:layoutData>
		<f:header>
			<Toolbar class="sapUiSmallMargin">
				<!--<core:Icon src="sap-icon://appointment-2" class="iconSize2_5" color="green"></core:Icon>-->
				<VBox>
					<Label text="{i18n>ReportingRule}" design="Bold"></Label>
					<Label text="{i18n>Frequency}"></Label>
				</VBox>
				<ToolbarSpacer/>
				<Link text="Delete" press="onDelete"/>
				<Label text="|" width="5px"></Label>
				<Link text="Add Item" press="onItemAdd"/>
				<Button type="Transparent" tooltip="Toggle Sort By Date" icon="sap-icon://sort" press=".onDateSort"/>
			</Toolbar>
			<!--<card:Header title="Reporting Rule" subtitle="Reporting Frequency" iconSrc="sap-icon://appointment-2"/>-->
		</f:header>
		<f:content>
			<List width="100%" showSeparators="None" items="{/0/items}" mode="Delete" >
				<CustomListItem highlight="Warning" >
					<HBox fitContainer="true">
						<core:Icon size="2rem" src="sap-icon://appointment-2" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" color="green" />
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
							
							<Title level="H3" text="Start From : { path: 'fromDate', type:'sap.ui.model.type.Date', 
											formatOptions:{ 
											 source : 
											  { pattern: 'yyyyMMdd' },
											 pattern: 'MMM dd, yyyy' }}" />
							<Title level="H3" text="Freq. : {freq} {frequnit}" />
							
							<HBox visible="{new}" width="100%" justifyContent="End"> 
							<Link text="Edit" press="onItemEdit" />
							<!--<Text text="|" class="sapUiTinyMarginBeginEnd"/> -->
							<!--<Link text="Delete" press="onItemDelete" />-->
							</HBox>	
						
						</VBox>
					</HBox>
				</CustomListItem>	
			</List>
		</f:content>
	</f:Card>
</core:FragmentDefinition>