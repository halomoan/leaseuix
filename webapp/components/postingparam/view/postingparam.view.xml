<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="refx.leaseuix.components.postingparam.controller.postingparam" xmlns:html="http://www.w3.org/1999/xhtml">
	<List headerText="Posting" mode="Delete" items="{path: '/postingparam'}" >
		<CustomListItem>
			<HBox>
				<core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Link text="{Name}" target="{ProductPicUrl}" press="handlePress"/>
					<Label text="{ProductId}"/>
				</VBox>
			</HBox>
		</CustomListItem>
	</List>
</mvc:View>