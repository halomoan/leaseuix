<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f"
	controllerName="refx.leaseuix.components.contractlst.controller.contractlist" xmlns:html="http://www.w3.org/1999/xhtml">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Contract ()"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<Label text="{i18n>KeyDate} :"/>
					<DatePicker placeholder="Key Date" value="{path: 'viewData>/KeyDate', type:'sap.ui.model.type.Date' }" change="onKeyDateChange"
								class="sapUiSmallMarginEnd" width="10rem"/>
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onAdd"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
				</OverflowToolbar>
				<Table id="contractTable" inset="false" items="{ path: '/ContractSet' ,groupHeaderFactory: '.getGroupHeader' }" class="sapFDynamicPageAlignContent" 
					growing="true" 
					width="auto" 
					sticky="ColumnHeaders"
					alternateRowColors="true">
					<columns>
						<Column>
							<Text text="Contract"/>
						</Column>
						<Column hAlign="End">
							<Text text="Duration"/>
						</Column>
						<Column hAlign="End" minScreenWidth="Desktop">
							<Text text="Lease Start"/>
						</Column>
						<Column hAlign="Center" minScreenWidth="Desktop">
							<Text text="Relevant To Sales"/>
						</Column>
						<Column hAlign="Center" minScreenWidth="Desktop">
							<Text text="Status"/>
						</Column>
					
					</columns>
					<items>
						<ColumnListItem type="Navigation">
							<cells>
								<ObjectIdentifier title="{ContractName}" text="{ContractNo}"/>
								<ObjectIdentifier title="{path: 'StartDate' ,type:'sap.ui.model.type.Date'} to {path: 'EndDate' ,type:'sap.ui.model.type.Date'}"
									text="Term End: { path: 'EndTermDate' , type:'sap.ui.model.type.Date'}"/>
								<ObjectIdentifier title="{path: 'LeaseStart' , type:'sap.ui.model.type.Date'}" text=""/>
								<ObjectStatus class="sapUiSmallMarginBottom" text="" visible="{RelSalesRule}" icon="sap-icon://message-success" state="Success"/>
								<Text text="{ContractStatus}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>