<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	controllerName="refx.leaseuix.components.cashflowchart.controller.main"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" height="100%">
	 <layout:FixFlex id='chartFixFlex' minFlexSize="250">
	 <layout:flexContent>
            <viz:Popover id="idPopOver"></viz:Popover>
            <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='bar'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{CashFlowSet}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="ConditionType"
                                value="{ConditionTypeText}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Amount"
                                value="{ConditionAmount}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
                        values="Amount" />
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                        values="ConditionType" />
                </viz:feeds>
            </viz:VizFrame>
        </layout:flexContent>	
	 </layout:FixFlex> 	
</mvc:View>