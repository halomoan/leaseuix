<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog id="mergeUnitsDialog" contentWidth="500px" contentHeight="600px" title="Merge Units" icon="sap-icon://combine">
		<NavContainer id="mergeUnitsNav">
			<Page id="page1" class="sapUiResponsivePadding--header" showHeader="false" showNavButton="false">
				<content>
					<l:VerticalLayout class="sapUiContentPadding">
						<f:SimpleForm id="UnitsDrag" editable="true">
							<f:content>
								<Label text="Name" labelFor="inpName"/>
								<Input editable="true" value="{name}"/>
							</f:content>
						</f:SimpleForm>
							<f:SimpleForm id="UnitsDrop" editable="true">
								<f:content>
									<Label  text="Name" labelFor="inpName"/>
									<Input  editable="true" value="{name}"/>
								</f:content>
							</f:SimpleForm>
							<HBox>
								<Label text="{i18n>From} {i18n>Date}:" labelFor="fromDate" class="sapUiSmallMarginTop"/>
								<DatePicker id="fromDate" value="{path: 'viewData>/KeyDate', type:'sap.ui.model.type.Date' }" placeholder="Enter Date ..."
									change="handleChange" class="sapUiSmallMarginBegin"/>
							</HBox>
						</l:VerticalLayout>
					</content>
				</Page>
				<Page id="page2" class="sapUiResponsivePadding--header" showHeader="false" showNavButton="false">
					<content></content>
				</Page>
			</NavContainer>
			<beginButton>
				<Button text="OK" press="closeMergeUnits"/>
			</beginButton>
			<endButton>
				<Button text="Cancel" press="cancelMergeUnits"/>
			</endButton>
		</Dialog>
	</core:FragmentDefinition>