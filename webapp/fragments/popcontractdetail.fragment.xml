<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover showHeader="false" contentWidth="320px" contentHeight="500px" placement="Right" ariaLabelledBy="master-title">
		<NavContainer id="navCon">
			<Page id="unitmaster" class="sapUiResponsivePadding--header customCSS" title="{i18n>ContractDetail}"  busy="{viewData>/busy/popcontract}" busyIndicatorDelay="{viewData>/delay}">
				<content>
					<ObjectHeader title="{Contractname}">
						<attributes>
							<ObjectAttribute text="Contract No.: {Contractno}"/>
							<ObjectAttribute text="Type : {Contracttype} - {Contracttypetext}"/>
							<ObjectAttribute text="Industry : {Industrytext}"/>
							<ObjectAttribute text="Status : {Recontractstatus}"/>
						</attributes>
					</ObjectHeader>
					<HBox class="sapUiSmallMargin" justifyContent="SpaceBetween">
						<VBox >
							<Text text="Start Date: { path: 'Startdate', type : 'sap.ui.model.type.Date',formatOptions:{ pattern: 'MMM dd, yyyy' } }"/>
							<Text text="End Date: { path: 'Enddate', type : 'sap.ui.model.type.Date',formatOptions:{ pattern: 'MMM dd, yyyy' } }"/>
							<Text text="Term End Date: { path: 'EndTermDate', type : 'sap.ui.model.type.Date',formatOptions:{ pattern: 'MMM dd, yyyy' } }"/>
						</VBox>
						
						
						<VBox>	
							<HBox justifyContent="End"><Text text="{parts: [ 'Startdate','EndTermDate' ], formatter: '.formatter.diffYear' }" class="gold sapUiTinyMarginEnd fontSize1_5"></Text><Text text="Year(s)"/> </HBox>
							<HBox justifyContent="End"><Text text="{parts: [ 'Startdate','EndTermDate' ], formatter: '.formatter.diffMonth' }" class="gold sapUiTinyMarginEnd fontSize1_5"></Text><Text text="Mth(s)"/> </HBox>
							<!--<Label  text="{parts: [ 'Startdate','EndTermDate' ], formatter: '.formatter.diffDays' }" />-->
						</VBox>
						
					</HBox>
					
					<HBox justifyContent="End" class="sapUiSmallMargin">
						
						<Text id="NoOfUnits" text="" class="sapUiSmallMarginTop"/>
						<Button id="UnitIcon" icon="{= ${Contracttype} === 'L001' ? 'sap-icon://building': 'sap-icon://retail-store'}" type="Transparent" tooltip="{i18n>Units}" press="onShowContractUnits(${REContractKey})" />
					</HBox>
					<!--<OverflowToolbar design="Solid">-->
					<!--	<ToolbarSpacer />-->
					<!--</OverflowToolbar>-->
				</content>
			</Page>
			<Page id="detail" class="sapUiResponsivePadding--header" showNavButton="true" navButtonPress="onNavBack" title="Product">
				<content></content>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>